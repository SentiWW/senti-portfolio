---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";
import BlogPreview from "../components/BlogPreview.astro";

const projects = (await getCollection("blog")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title="My Blog | Wojciech Warwas"
  description="Learn about Wojciech Warwas's most recent projects"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="My Blog"
        tagline="Read about my experiences with different technologies."
        align="start"
      />
      <p>Under construction, many cool things to come...</p>
      <!--
      <Grid variant="offset">
        {
          projects.map((project) => (
            <li>
              <BlogPreview project={project} />
            </li>
          ))
        }
      </Grid>
       -->
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
